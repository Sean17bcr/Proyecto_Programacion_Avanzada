@model Proyecto_Web.Entities.UsuarioEnt
@{ ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout - Inicio.cshtml"; }

@using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post))
{
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html"><span>Gimnasio SVAM</span></a>
                </div>

                @if (ViewBag.MsjPantalla != null)
                {
                    <div style="color:white" class="alert alert-primary" role="alert">
                        @ViewBag.MsjPantalla
                    </div>
                }

                <div class="login-form">
                    <h4>Inicio de Sesión</h4>
                    <form>
                        <div class="form-group">
                            <label>Dirección de correo electrónico</label>
                            @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control input-lg", @placeholder = "Correo Electrónico" })
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control input-lg", @placeholder = "Contraseña" })
                        </div>
                        <div class="form-group">
                        </div>
                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Iniciar Sesión</button>

                        <div class="register-link m-t-15 text-center">
                            <p>
                                <a class="text-blue" href="@Url.Action("Recuperar", "Home")">Recuperar Contraseña</a><br />
                                <a class="text-blue" href="@Url.Action("Registro", "Home")">Ir al Registro</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
}