@model Proyecto_Web.Entities.EquipoEnt

@{
    ViewBag.Title = "Agregar Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AgregarEquipo", "Equipo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
<div class="row">
    <div class="col-xl-12">
        <div class="card card-default">
            <div class="card-header">
                <h2>Agregar Equipo</h2>
            </div>
            @if (ViewBag.MsjPantalla != null)
            {
                <div style="color:white" class="alert alert-primary" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }
            <div class="card-body">

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control input-lg", @placeholder = "Nombre" })
                </div>

                <div class="form-group">
                    @Html.TextAreaFor(m => m.Descripcion, new { @type = "text", Style = "heigth:100px", @class = "form-control input-lg", @placeholder = "Descripción" })
                </div>

                <div class="form-group">
                    @Html.TextAreaFor(m => m.Cantidad, new { @type = "text", Style = "heigth:100px", @class = "form-control input-lg", @placeholder = "Descripción" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>
</div>
}


