@model IEnumerable<Proyecto_Web.Entities.EquipoEnt>
@{
    ViewBag.Title = "ConsultarEquipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-12">

        <div class="card card-default">

            <div class="card-header">
                <h2>Cursos</h2>
            </div>

            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-10">
                    <a href="@Url.Action("Agregar","Equipo")" class="btn btn-primary"> <i class="fa fa-plus"></i>&nbsp;&nbsp; Agregar </a>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-10">

                    <table class="table table-bordered">
                        <thead>
                            <tr style="text-align:center">
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Cantidad</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width:20%" title="@item.Descripcion">@item.Nombre</td>
                                    <td style="width:20%">@item.Cantidad</td>
                                    <td style="width:10%;text-align:center">
                                        <a href="@Url.Action("Editar","Equipo", new { q = item.Equipo_id })"><i class="fa fa-pencil fa-lg"></i></a>
                                    </td>
                                    <td style="text-align:center">
                                        <a href="@Url.Action("EliminarEquipo","Equipo", new { q = item.Equipo_id })"><i class="fa fa-trash fa-lg"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>

                </div>
            </div>
            <br />
            <br />

        </div>
    </div>
</div>

