@model IEnumerable<Proyecto_Web.Entities.UsuarioEnt>
@{
    ViewBag.Title = "ConsultarUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-12">

        <div class="card card-default">

            <div class="card-header">
                <h2>Usuarios</h2>
            </div>


            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-10">

                    <table class="table table-bordered">
                        <thead>
                            <tr style="text-align:center">
                                <th>Identificación</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Rol</th>
                                <th>Membresia</th>
                                <th>Telefono</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Identificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.CorreoElectronico</td>
                                <td>@item.NombreRol</td>
                                <td>@item.TipoMembresia</td>
                                <td>@item.Telefono</td>
                                <td style="text-align:center">
                                    <a href="@Url.Action("Editar","Usuario", new { q = item.IdUsuario })"><i class="fa fa-pencil fa-lg"></i></a>
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>

                </div>
            </div>
            <br />
            <br />

        </div>
    </div>
</div>


