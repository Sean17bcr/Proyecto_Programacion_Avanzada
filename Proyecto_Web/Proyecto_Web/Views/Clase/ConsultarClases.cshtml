@model IEnumerable<Proyecto_Web.Entities.ClaseEnt>
@{
    ViewBag.Title = "ConsultarClases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-xl-12">

        <div class="card card-default">

            <div class="card-header">
                <h2>Clases</h2>
            </div>

            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-10">
                    <a href="@Url.Action("Agregar","Clase")" class="btn btn-primary"> <i class="fa fa-plus"></i>&nbsp;&nbsp; Agregar </a>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-lg-1">
                </div>
                <div class="col-lg-10">

                    <table class="table table-bordered">
                        <thead>
                            <tr style="text-align:center">
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Horario</th>
                                <th>Capacidad</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="width:20%" title="@item.Descripcion">@item.Nombre</td>
                                <td style="width:20%">@item.Descripcion</td>
                                <td style="width:20%">@item.Horario</td>
                                <td style="width:15%">@item.Capacidad</td>
                                <td style="width:10%;text-align:center">
                                    <a href="@Url.Action("Editar","Clase", new { q = item.Clase_id })"><i class="fa fa-pencil fa-lg"></i></a>
                                </td>
                                <td style="text-align:center">
                                    <a href="@Url.Action("EliminarClase","Clase", new { q = item.Clase_id })"><i class="fa fa-trash fa-lg"></i></a>
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>

                </div>
            </div>
            <br />
            <br />

        </div>
    </div>
</div>


