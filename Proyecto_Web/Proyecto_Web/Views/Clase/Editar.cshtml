@model Proyecto_Web.Entities.ClaseEnt

@{
    ViewBag.Title = "Editar Clase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("EditarClase", "Clase", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    <div class="row">
        <div class="col-xl-12">
            <div class="card card-default">
                <div class="card-header">
                    <h2>Editar Clase</h2>
                </div>
                @if (ViewBag.MsjPantalla != null)
                {
                    <div style="color:white" class="alert alert-primary" role="alert">
                        @ViewBag.MsjPantalla
                    </div>
                }
                <div class="card-body">


                        @Html.HiddenFor(model => model.Clase_id)

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control input-lg", @placeholder = "Nombre" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Descripcion, new { @type = "text", Style = "heigth:100px", @class = "form-control input-lg", @placeholder = "Descripción" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Horario, new { @type = "text", Style = "heigth:100px", @class = "form-control input-lg", @placeholder = "Horario" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Capacidad, new { @type = "text", Style = "heigth:100px", @class = "form-control input-lg", @placeholder = "Capacidad" })
                    </div>

                        <div class="form-group">
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                        </div>
                    
                </div>
            </div>
        </div>
    </div>

}



